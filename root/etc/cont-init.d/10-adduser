#!/usr/bin/with-contenv bash

PUID=${PUID:-911}
PGID=${PGID:-911}

groupmod -o -g "$PGID" epgd
usermod -o -u "$PUID" epgd

echo '
--------------------------------------------------------------
                      _  _  ____  ____
                     ( \/ )(  _ \(  _ \
                      \  /  )(_) ))   /
                       \/  (____/(_)\_)
  ____  ____   ___    ____    __    ____  __  __  _____  _  _
 ( ___)(  _ \ / __)  (  _ \  /__\  ( ___)(  \/  )(  _  )( \( )
  )__)  )___/( (_-.   )(_) )/(__)\  )__)  )    (  )(_)(  )  (
 (____)(__)   \___/  (____/(__)(__)(____)(_/\/\_)(_____)(_)\_)

  https://projects.vdr-developer.org/projects/vdr-epg-daemon
--------------------------------------------------------------'
echo '
GID/UID
--------------------------------------------------------------'
echo "
User uid:    $(id -u epgd)
User gid:    $(id -g epgd)
--------------------------------------------------------------
"
